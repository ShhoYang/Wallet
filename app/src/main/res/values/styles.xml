<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorGray9</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>


    <style name="ScrollingPagerIndicator">
        <item name="spi_dotColor">@color/colorGray1</item>
        <item name="spi_dotSelectedColor">@color/colorWhite</item>
        <item name="spi_dotSize">4dp</item>
        <item name="spi_dotSelectedSize">4dp</item>
        <item name="spi_dotSpacing">4dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>


    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">@dimen/top_sheet_modal_elevation</item>
        <item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="ColorSwitchStyles">
        <item name="colorControlActivated">@color/colorAtom</item>
    </style>

    <style name="ColorSwitchStylesIov">
        <item name="colorControlActivated">@color/colorIov</item>
    </style>

    <style name="WelcomeTheme" parent="GStatusBarTransparentTheme">
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="FullScreenTheme" parent="GAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ImmersionTheme" parent="GAppTheme">
        <item name="colorPrimaryDark">@color/themeColor</item>
    </style>

    <style name="ThemeColorBgTheme" parent="GAppTheme">
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="android:windowBackground">@color/themeColor</item>
    </style>

    <style name="mnemonic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mnemonic_bg</item>
        <item name="android:digits">@string/digits2</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_desc</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="InputViewTip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
