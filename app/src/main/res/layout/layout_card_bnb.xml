<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_2"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_6"
    app:cardElevation="1.5dp"
    app:cardBackgroundColor="@color/colorTransBg5"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dash_bnb_icon"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:src="@drawable/bnb_token_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dash_bnb_icon"
                android:layout_marginLeft="@dimen/space_8"
                android:text="BNB"
                style="@style/font_ss_14_bnb"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/dash_bnb_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="-"
                    style="@style/font_ssm_17_white"/>
                <TextView
                    android:id="@+id/dash_bnb_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/font_ss_14_gray1"
                    android:text="-"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_12"
            android:background="@color/colorGray3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_available"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/dash_bnb_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_locked"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/dash_bnb_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="-"
                style="@style/font_ssl_12_white"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layer_bnb_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <RelativeLayout
                android:id="@+id/btn_wallet_connect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/connect_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_11_white"
                    android:text="@string/str_wallet_connect" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_bep3_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/bepsend_ic_s"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_11_white"
                    android:text="@string/str_interchain" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layer_bnb_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/btn_bnb_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/send_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_send" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_bnb_receive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:minHeight="@dimen/space_40"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/btn_trans_with_border"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/qrcode_ic"
                    android:drawablePadding="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_ss_12_white"
                    android:text="@string/str_receive" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_bep3_send2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:minHeight="@dimen/space_40"
            android:background="@drawable/btn_trans_with_border"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/bepsend_ic_s"
                android:drawablePadding="@dimen/space_8"
                android:gravity="center"
                style="@style/font_ss_12_white"
                android:text="@string/str_interchain" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_bnb_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:minHeight="@dimen/space_40"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/card_ic"
                android:drawableTint="@color/colorWhite"
                android:drawablePadding="@dimen/space_8"
                android:gravity="center"
                style="@style/font_ss_12_white"
                android:text="@string/str_buy_bnb" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>