<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context=".gaojie.activity.ReceiveRewardActivity">

    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="@dimen/activity_padding"
        android:text="验证人地址" />

    <EditText
        android:id="@+id/etValidatorAddress"
        style="@style/InputViewContent"
        android:enabled="false" />

    <include layout="@layout/g_include_input_line" />

    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="32dp"
        android:text="预计领取" />

    <EditText
        android:id="@+id/etAmount"
        style="@style/InputViewContent"
        android:enabled="false" />

    <include
        android:id="@+id/amountLine"
        layout="@layout/g_include_input_line" />

    <TextView
        style="@style/InputViewTip"
        android:text="预计领取数量为估算结果，领取数量以实际交易为准" />

    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="32dp"
        android:text="领取地址" />

    <EditText
        android:id="@+id/etReceiveAddress"
        style="@style/InputViewContent"
        android:digits="@string/digits" />

    <include
        android:id="@+id/receiveAddressLine"
        layout="@layout/g_include_input_line" />

    <com.highstreet.lib.view.RoundButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="确定" />

</LinearLayout>