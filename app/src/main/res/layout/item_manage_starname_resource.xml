<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chain_img"
                    android:layout_width="@dimen/space_32"
                    android:layout_height="@dimen/space_32"
                    android:layout_centerInParent="true"
                    android:src="@drawable/default_chain_img"/>
                <TextView
                    android:id="@+id/chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_ss_14_white"
                    android:text="Chain Name"/>
            </LinearLayout>
            <EditText
                android:id="@+id/chain_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_30"
                android:layout_marginTop="@dimen/space_4"
                android:textCursorDrawable="@drawable/white_cursor"
                android:background="@drawable/edittext_box"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                style="@style/font_ss_12_white"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:ellipsize="middle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_24"
                    android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_qr"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_30"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_trans_with_border_thin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qr_ic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        style="@style/font_ss_9_white"
                        android:text="@string/str_qr_code"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_wallet"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_30"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_8"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_trans_with_border_thin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/list_ic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        style="@style/font_ss_9_white"
                        android:text="@string/str_in_wallet"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_paste"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_30"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_8"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_trans_with_border_thin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/copy_ic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        style="@style/font_ss_9_white"
                        android:text="@string/str_paste"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>