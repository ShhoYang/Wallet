<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_16">
        <RelativeLayout
            android:id="@+id/btn_gas_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_44"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:background="@drawable/edittext_box"
            android:clickable="true">
            <TextView
                android:id="@+id/gas_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/font_ss_14_atom"
                android:text="ATOM"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down_gr"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fee_dp_layer1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_54"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_24"
            android:background="@color/colorTransBg"
            android:visibility="gone">
            <TextView
                android:id="@+id/min_fee_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ss_14_white"
                android:text="-"/>
            <TextView
                android:id="@+id/min_fee_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                style="@style/font_ss_10_gray1"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fee_dp_layer2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_54"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_24"
            android:background="@color/colorTransBg">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gas_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_12_white"
                    android:text="-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_9_gray1"
                    android:text="@string/str_gas_amount"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_17_white"
                    android:text="X"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gas_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_12_white"
                    android:text="-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_9_gray1"
                    android:text="@string/str_gas_rate"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_17_white"
                    android:text="="/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gas_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_15_white"
                    android:text="-"/>
                <TextView
                    android:id="@+id/gas_fee_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_9_gray1"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fee_dp_layer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:orientation="vertical">
            <SeekBar
                android:id="@+id/gas_price_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                android:splitTrack="false"
                android:progress="1"
                android:max="2"
                android:progressDrawable="@drawable/gas_atom_seekbar_style"
                android:thumb="@drawable/gas_seekbar_thumb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/font_ss_11_gray1"
                    android:text="@string/str_free"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    style="@style/font_ss_11_gray1"
                    android:text="@string/str_low"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_11_gray1"
                    android:text="@string/str_average"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speed_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_44"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/speed_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bycicle_img"/>
            <TextView
                android:id="@+id/speed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/font_ss_12_gray1"
                android:text="@string/str_fee_speed_title_0"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/multi_notice_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_control"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_40"
        android:paddingRight="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_32"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/create_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/warning_ic"/>
        <TextView
            android:id="@+id/create_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:gravity="center"
            style="@style/font_ss_12_gray1"
            android:text="@string/str_multi_reward_notice"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_before"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_back"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>