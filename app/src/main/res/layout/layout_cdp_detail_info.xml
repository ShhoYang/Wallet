<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_2"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/space_6"
    app:cardElevation="1.5dp"
    app:cardBackgroundColor="@color/colorTransBg"
    android:foreground="@null"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cdp_markets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/market_img"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"/>
                <TextView
                    android:id="@+id/market_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_2"
                    style="@style/font_ss_12_white"
                    android:text="BTC : USDX"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cdp_my_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cdp_markets"
                android:layout_alignTop="@+id/cdp_markets"
                android:layout_alignBottom="@+id/cdp_markets"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginBottom="-2dp"
                android:orientation="vertical"
                android:gravity="bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                    <ImageView
                        android:id="@+id/cdp_safe_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_safe"/>
                    <ImageView
                        android:layout_width="@dimen/space_14"
                        android:layout_height="@dimen/space_14"
                        android:layout_toRightOf="@+id/cdp_safe_img"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_centerVertical="true"
                        android:src="@drawable/question_ic"/>
                    <TextView
                        android:id="@+id/cdp_safe_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_26_white"
                        android:text="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:id="@+id/cdp_debt_value_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDX debt Value"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_debt_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_14_white"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <TextView
                        android:id="@+id/cdp_collateral_value_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collateral BTC Value"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_collateral_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_14_white"
                        android:gravity="right"
                        android:text="-"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cdp_empty_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cdp_markets"
                android:layout_alignBottom="@+id/cdp_markets"
                android:layout_toRightOf="@+id/cdp_markets"
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
                <TextView
                    android:id="@+id/cdp_collateral_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/font_ss_26_white"
                    android:gravity="right"
                    android:text="-"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:text="@string/str_min_collateral_rate"
                    style="@style/font_ss_12_gray1"/>
            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray3"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"/>

        <RelativeLayout
            android:id="@+id/collateral_rate_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_12">
            <LinearLayout
                android:id="@+id/collateral_rate_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_min_collateral_rate"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/collateral_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/stability_fee_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_stability_fee"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/stability_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <LinearLayout
                android:id="@+id/liquidation_penalty_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_liquidation_penalty"
                    style="@style/font_ss_12_gray1"/>
                <ImageView
                    android:layout_width="@dimen/space_14"
                    android:layout_height="@dimen/space_14"
                    android:layout_marginLeft="@dimen/space_4"
                    android:src="@drawable/question_ic"/>
            </LinearLayout>
            <TextView
                android:id="@+id/liquidation_penalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:id="@+id/current_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_current_price"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/liquidation_price_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:id="@+id/liquidation_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_liquidation_title1"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/liquidation_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray3"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_max_global_debt"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/max_debt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_remain_debt"
                style="@style/font_ss_12_gray1"/>
            <TextView
                android:id="@+id/remain_debt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/font_ssl_14_white"
                android:gravity="right"
                android:text="-"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>